<div class="p-3 mb-2 bg-light text-black " style="height: full;">

<div class="row justify-content-center">
<div class="row col-md-6 col-md-push-">
<%= form_with(model: @book) do |form| %>
  <h1>Book Page - <%= @book.title %></h1>

  <div class="field">
  <%= form.label :title %>
  <%= form.text_field :title, :readonly => true %>
  </div>

  <div class="field">
  <%= form.label :library_name %>
  <%= form.text_field :library_name, :readonly => true %>
  </div>
  
  <div class="field">
  <%= form.label :author %>
  <%= form.text_field :author, :readonly => true %>
  </div>
  
  <div class="field">
  <%= form.label :genre %>
  <%= form.text_field :genre, :readonly => true %>
  </div>
  
  <div class="field">
  <%= form.label :subgenre %>
  <%= form.text_field :subgenre, :readonly => true %>
  </div>
  
  <div class="field">
  <%= form.label :pages %>
  <%= form.text_field :pages, :readonly => true %>
  </div>
  
  <div class="field">
  <%= form.label :publisher %>
  <%= form.text_field :publisher, :readonly => true %>
  </div>
  
  <div class="field">
  <%= form.label :copies %>
  <%= form.text_field :copies, :readonly => true %>
  </div>
  
  <% if current_user && (!(@book.copies.nil? || @book.copies.zero?)) %>
  
  <div class="field">
  <%= form.label :returnDate %>
  <%= form.text_field :returnDate, value:(@date = Time.now + 7.days
  @date.strftime("%B %d, %Y")), :readonly => true %>
  </div>
  
  <div class="field">
  <%= form.label :email %>
  <%= form.text_field :email, value:(current_user.email), :readonly => true %>
  </div>
  
  <% end %>

  <% if (@book.copies.nil? || @book.copies.zero?) %>
  <div class="btn btn-success btn-sm">
  <%= link_to 'Waitlist', waitlist_book_path %><br>
  </div>

  <% elsif !(@book.copies.nil? || @book.copies.zero?) %>
    <div class="btn btn-success btn-sm">
      <%= link_to 'Borrow', borrow_book_path %><br>
    </div>
  <% end %>
<div class="btn btn-danger btn-sm">
<%= link_to 'Back', :back %>
  </div>
  <% end %>
  </div>
  </div>
  </div>
