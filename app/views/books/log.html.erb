<h1>Library Logs</h1>


<% if current_user %>
    <div class="btn-group" role="group" aria-label="Basic example">
    <%= button_to 'Sign out', destroy_user_session_path, method: :delete, class:"btn btn-warning" %>
    <%= button_to 'Profile', show_user_path, class:"btn btn-primary" %>
    <%= link_to 'Back', :back, class:"btn btn-success" %>
    </div>
<% else %>
    <%= link_to 'Sign up', new_user_registration_path %>
    <%= link_to 'Sign in', new_user_session_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%# Creates log of multiple books due to multiple locations %>
    <% @Log.each do |log| %>
      <tr>
        <td><%= log.title %></td>
        <td><%= link_to 'History', history_book_path(Book.find_by(title: log.title)) %></td>
    <% end %>
    <% @BooksUser.each do |booksUser| %>
      <tr>
        <td><%= Book.find_by(id: booksUser.book_id).title %></td>
        <td><%= link_to 'History', history_book_path(Book.find_by(id: booksUser.book_id)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>