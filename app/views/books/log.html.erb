<h1>Library Logs</h1>


<% if current_user %>
    <strong>Logged in as:</strong> 
    <%= current_user.email %>
    <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
    <a href="/user">Profile</a>    

<% else %>
    <%= link_to 'Sign up', new_user_registration_path %>
    <%= link_to 'Sign in', new_user_session_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= link_to 'History', history_book_path(book) %></td>
      </tr>
    <% end %>

  </tbody>
</table>